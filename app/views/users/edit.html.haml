.row
  .col-lg-12.text-center
    %h4
      = t("change_your_password")
      .left
        = link_to t("back"), profile_path, :class => "btn btn-info btn-sm", :id => "loader"
    %hr.star-primary/
.row
  .col-lg-8.col-lg-offset-2
    = form_for(@user, :url => { :action => "update_password" }, :html => {:id => "changePassForm", :class => "form-horizontal", :novalidate => "" } ) do |f|
      .row.control-group
        .form-group.col-xs-12.floating-label-form-group.controls
          %label= t("new_password")
          %input#password.form-control{"data-validation-required-message" => t("required"), :placeholder => t("password"), :required => "", :type => "password", :name => "user[password]", :autocomplete => "off"}/
          %p.help-block.text-danger 
      .row.control-group
        .form-group.col-xs-12.floating-label-form-group.controls
          %label= t("confirm_new_password")
          %input#password_confirmation.form-control{"data-validation-required-message" => t("required"), :placeholder => t("confirm_new_password"), :required => "", :type => "password", :name => "user[password_confirmation]"}/
          %p.help-block.text-danger
      %br/
      #success
      .row
        .form-group.col-xs-12
          %button.btn.btn-primary{:type => "submit", :id => "contact-btn", data: { disable_with: "Please wait..." }}= t("change_your_password")