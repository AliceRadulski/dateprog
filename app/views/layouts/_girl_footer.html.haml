/ Footer
.footer
  %footer.text-center
    .footer-below
      .row
        .col-lg-12
          .col-lg-3
          .col-lg-6
            %div
              = link_to  t("blog"), "http://demoblog.blogspot.com", :target=>'_blank'
              = " | "
              = link_to(t("feedback_forum"), (I18n.locale == "ru" ? "http://demo.reformal.ru/" : "http://demo.idea.informer.com/"), :target => "_blank")
              = " | "
              = link_to(t("contact_us"), "mailto:support@demo.com?subject=Question")
            %div
              = t("footer_msg")
              = link_to t("en"), url_for(params.merge(:locale => "en")), :id => "loader"
              = " | "
              = link_to t("ru"), url_for(params.merge(:locale => "ru")), :id => "loader"
          .col-lg-3
                      
/ Scroll to Top Button (Only visible on small and extra-small screen sizes)
.scroll-top.page-scroll.visible-xs.visble-sm
  %a.btn.btn-primary{:href => "#page-top"}
    %i.fa.fa-chevron-up

