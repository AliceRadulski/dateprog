:javascript
  $(document).ready(function() {
      $("#flash_notice").delay(3000).fadeOut(300);
      // jBar Script by Todd Motto
      $('.downbar').delay(100).fadeIn(400).addClass('up');
      $('.jquery-bar').hide().delay(500).slideDown(400);
      $('.jquery-arrow').click(function(){
          $('.downbar').toggleClass('up', 400);          
          $('.jquery-bar').slideToggle();
      });
  });
  


    